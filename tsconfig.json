{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"outDir": "./dist",
		"noEmit": false,
		"rootDir": "./",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*", "./server/*"],
			"@/styles/*": ["./src/styles/*"],
			"@/hooks/*": ["./src/hooks/*"],
			"@/shared/*": ["./shared/*"],
			"@/server/*": ["./server/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"server/server.ts",
		"tests/**/*"
	],
	"exclude": ["node_modules"]
}
